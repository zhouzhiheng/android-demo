<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--当单选被选中时触发-->
    <item android:state_checked="true">
        <shape>
            <solid
                android:color="#BEBE0E"/>
            <corners
                android:radius="2dp"/>
        </shape>
    </item>

    <!--当按钮被松开时-->
    <item android:state_checked="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#F6F680"/>
            <corners
                android:radius="2dp"/>
        </shape>
    </item>
</selector>